# ===== API KEYS =====
# Get your Gemini API key at: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Get your ElevenLabs API key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ===== DATABASE =====
# MongoDB Connection String
# Local: mongodb://localhost:27017/
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_URL=mongodb+srv://your_username:your_password@cluster.mongodb.net/
MONGODB_DB_NAME=12tree_db

# ===== REDIS =====
# Redis Connection URL
# Local: redis://localhost:6379/0
# Cloud: redis://default:password@host:port
REDIS_URL=redis://localhost:6379/0

# ===== APPLICATION SETTINGS =====
SAMPLE_RATE=24000
MAX_CONCURRENT_JOBS=3
CACHE_EXPIRY_DAYS=7
DEBUG=True

# ===== DIRECTORIES =====
BEATS_DIR=beats
OUTPUT_DIR=outputs
TEMP_DIR=temp
BACKGROUND_MUSIC_DIR=background_music

# ===== AUDIO SETTINGS =====
VOCALS_VOLUME=1.0
INSTRUMENTAL_VOLUME=0.4
PIRATE_SHANTY_BPM_MIN=90
PIRATE_SHANTY_BPM_MAX=110

# ===== BACKGROUND MUSIC SETTINGS =====
# Set to True to use custom MP3 tracks from background_music/ folder
USE_CUSTOM_BACKGROUND_MUSIC=True
BACKGROUND_MUSIC_FADE_OUT=1.0

# ===== TTS PROVIDER SETTINGS =====
TTS_PROVIDER=elevenlabs
TTS_FALLBACK_TO_BARK=True

# ===== ELEVENLABS TTS SETTINGS (Primary) =====
# Voice ID - Get from: https://elevenlabs.io/app/voice-library
# Recommended child-friendly voices:
#   - cgSgspJ2msm6clMCkdW9 (Sarah - gentle, clear)
#   - EXAVITQu4vr4xnSDxMaL (Bella - warm, friendly)
ELEVENLABS_VOICE_ID=cgSgspJ2msm6clMCkdW9
ELEVENLABS_MODEL=eleven_multilingual_v2
ELEVENLABS_STABILITY=0.3
ELEVENLABS_SIMILARITY=0.6
ELEVENLABS_STYLE=0.8
ELEVENLABS_BOOST=True

# ===== BARK TTS SETTINGS (Fallback) =====
BARK_MODEL=suno/bark
BARK_VOICE_PRESET=v2/en_speaker_9
BARK_TEMPERATURE=0.7
BARK_USE_GPU=True
BARK_SINGING_MODE=True
BARK_SEMANTIC_TEMP=0.9
BARK_COARSE_TEMP=0.8
BARK_FINE_TEMP=0.7
